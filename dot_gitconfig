[core]
	autocrlf = input
	editor = vim
	filemode = false
[credential]
	helper = store
[alias]
	br = branch
	st = status
	co = checkout
	ci = commit
	tree = log --graph --abbrev-commit --decorate --date=relative --pretty=format:'%C(auto)%h%Creset %C(auto)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset'
	tree-all = tree --all
	ls = ls-files
[init]
	defaultBranch = main
[fetch]
	prune = true
[pull]
	rebase = false
[merge]
	tool = vimdiff
[user]
	useConfigOnly = true
