#!/bin/sh

# install packages

# {{if eq .chezmoi.os "linux"}}
# manager

sudo apt update && sudo apt upgrade -y && sudo apt install -y \
  build-essential \
  curl \
  fd-find \
  fish \
  fzf \
  git \
  git-delta \
  jq \
  ranger \
  subversion \
  tmux \
  tmuxp \
  unzip \
  xclip \
  zsh

# manual

# NOTE: temporary for version issue
# neovim

test ! -d ~/bin && mkdir ~/bin

cd /tmp
curl -LO https://github.com/neovim/neovim/releases/download/v0.10.0/nvim-linux64.tar.gz
tar xzvf nvim-linux64.tar.gz
mv nvim-linux64 ~/bin/nvim
rm nvim-linux64.tar.gz
cd -

# oh my posh

test ! -d ~/bin && mkdir ~/bin

curl -s https://ohmyposh.dev/install.sh | bash -s -- -d ~/bin

# NOTE: temporary for version issue
# ripgrep

cd /tmp
curl -LO https://github.com/BurntSushi/ripgrep/releases/download/14.1.0/ripgrep_14.1.0-1_amd64.deb
sudo dpkg -i ripgrep_14.1.0-1_amd64.deb
rm ripgrep_14.1.0-1_amd64.deb
cd -
# {{end}}

# {{if eq .chezmoi.os "darwin"}}
# manager

/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

brew install \
  coreutils \
  curl \
  fd \
  fish \
  fzf \
  git \
  git-delta \
  jandedobbeleer/oh-my-posh/oh-my-posh \
  jq \
  neovim \
  ranger \
  ripgrep \
  subversion \
  tmux \
  tmuxp \
  unzip \
  zsh
# {{end}}

# asdf

git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.14.1

# fish
mkdir -p ~/.config/fish/completions
ln -s ~/.asdf/completions/asdf.fish ~/.config/fish/completions

# fisher

fish -c "curl -sL https://raw.githubusercontent.com/jorgebucaran/fisher/main/functions/fisher.fish | source && fisher install jorgebucaran/fisher"
fish -c "fisher update"

# oh my zsh

git clone https://github.com/ohmyzsh/ohmyzsh.git ~/.oh-my-zsh

# zsh-autosuggestions
git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions

# tpm

git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

# vim-plug

curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
  https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'

#

echo "
include scripts:
  fish:
    source ~/.my-config/fish/init.fish
  
  ps:
    . ~/.my-config/ps/init.ps1
  
  tmux:
    source-file ~/.my-config/tmux/init.conf
  
  vim:
    source ~/.my-config/vim/init.vim
  
  zsh:
    source ~/.my-config/zsh/init.sh
"
